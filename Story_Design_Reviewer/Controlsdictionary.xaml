                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Story_Design_Reviewer"
                    xmlns:WPFContros="clr-namespace:Story_Design_Reviewer.WPFControls.Inspect"
                    xmlns:InspectElement="clr-namespace:Story_Design_Reviewer.WPFControls.Inspect.Element"
                    x:Class="Story_Design_Reviewer.ResourcesDictionaryEvents"
                    xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" 
                    >
    <!--#region StaticTempelte -->
    <!--#region Brush -->
    <SolidColorBrush x:Key="MainBackGroundColor" Color="#F1EDED"/>
    <SolidColorBrush x:Key="MainBorderBrush" Color="#ACACAC"/>

    <SolidColorBrush x:Key="PageBackGroundColor" Color="#F1FFFF"/>

    <SolidColorBrush x:Key="Tab.SelectBorderColor" Color="#0000FF"/>
    <SolidColorBrush x:Key="Tab.SelectBackgroundColor" Color="#FFFFFF"/>
    <!--#endregion-->
    <!--#endregion-->

    <!--#region inspect-->
    <Style x:Key="InspectItemsControl" TargetType="ListBox">
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                <Border x:Name="border" CornerRadius="0">
                                    <InspectElement:InspectItem ItemKey="{Binding ItemKey}" ItemValue="{Binding ItemValue}"  ItemAllowModify="{Binding AllowModify}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter TargetName="border" Property="BorderThickness" Value="2" />
                                        <Setter TargetName="border" Property="BorderBrush" >
                                            <Setter.Value>
                                                <SolidColorBrush Color="DarkBlue" Opacity="1"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsFocused" Value="False">
                                        <Setter TargetName="border" Property="BorderThickness" Value="0,1,0,0" />
                                        <Setter TargetName="border" Property="BorderBrush" >
                                            <Setter.Value>
                                                <SolidColorBrush Color="#CACACA"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <EventSetter Event="PreviewMouseWheel" Handler="ListBox_Answers_PreviewMouseWheel"/>
    </Style>

    <Style x:Key="InspectListBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource MainBorderBrush }"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>
    <!--#endregion-->

