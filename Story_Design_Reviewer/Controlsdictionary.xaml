    <!--#region inspect-->
    <Style x:Key="InspectItemsControl" TargetType="ListBox">
        <Setter Property="DataContext" Value="{Binding ElementName=main, Path=DataContext}"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                <Border x:Name="border" CornerRadius="0" Margin="2">
                                    <WPFContros:InspectItem ItemKey="{Binding ItemKey}" ItemValue="{Binding ItemValue}" AllowModify="{Binding AllowModify}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter TargetName="border" Property="BorderThickness" Value="2" />
                                        <Setter TargetName="border" Property="BorderBrush" >
                                            <Setter.Value>
                                                <SolidColorBrush Color="DarkBlue" Opacity="1"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsFocused" Value="False">
                                        <Setter TargetName="border" Property="BorderThickness" Value="0,0,0,1" />
                                        <Setter TargetName="border" Property="BorderBrush" >
                                            <Setter.Value>
                                                <SolidColorBrush Color="Black" Opacity="0.5"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <EventSetter Event="PreviewMouseWheel" Handler="ListBox_Answers_PreviewMouseWheel"/>
    </Style>

    <Style x:Key="InspectListBorder" TargetType="Border">
        <Setter Property="BorderBrush">
            <Setter.Value>
                <SolidColorBrush Color="black" Opacity="0.5"/>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>
    <!--#endregion-->

